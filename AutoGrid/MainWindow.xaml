<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoGrid"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions" x:Class="AutoGrid.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <UniformGrid x:Name="MainGrid"
                     Rows="3"
                     Columns="3"
                     Height="Auto"
                     Visibility="Visible"
                     Width="Auto"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch">
            <local:GridAdapter x:Name="ItemGrid" />
            <local:GridAdapter x:Name="ItemGrid2" />
            <local:GridAdapter x:Name="ItemGrid3" />
            <local:GridAdapter x:Name="ItemGrid4" />
            <local:GridAdapter x:Name="ItemGrid5" />
            <local:GridAdapter x:Name="ItemGrid6" />
            <local:GridAdapter x:Name="ItemGrid7" />
            <local:GridAdapter x:Name="ItemGrid8" />
            <local:GridAdapter x:Name="ItemGrid9" />
        </UniformGrid>
        <Canvas Name="Temp"/>
    </Grid>
</Window>